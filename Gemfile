  gem 'sqlite3'
  gem 'simplecov'
  gem 'faker'
  gem 'rspec-rails'
  gem 'capybara'
  gem 'fabrication'
  gem 'guard-rspec'
  gem 'shoulda-matchers'
  gem 'launchy'
end

group :production do
  gem 'pg'
end

